{
    "name": "NJIT Schedule Builder RMP",
    "version": "1.0",
    "description": "An open source extension which displays professor rating information directly on the NJIT schedule builder website",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "tabs",
        "https://uisapppr3.njit.edu/scbldr/+"
    ],
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "css":["styles.css"],
            "matches": [
                "https://uisapppr3.njit.edu/scbldr/"
            ],
            "run_at": "document_end"
        }
    ]
}